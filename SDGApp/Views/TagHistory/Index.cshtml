            },
            yaxis: {
                title: {
                    text: 'Value'
                },
                
            },
            legend: {
                show: true,
                showForSingleSeries: false,
                position: 'top',
                display: false,
                onItemClick: {
                    toggleDataSeries: true
                },
               
                formatter: function (seriesName, opts) {
                    return [Taglabels[i++]];
                },
                markers: {
                    fillColors: lagendcolor,
                },
            },
            responsive: [
                {
                    breakpoint: 1000,
                    options: {
                        plotOptions: {
                            bar: {
                                horizontal: false
                            }
                        },
                        legend: {
                            position: "bottom"
                        }
                    }
                }
            ]
        };

        var chart = new ApexCharts(document.querySelector("#chtTagChart"), options);
        chart.render();
        
    }




</script>


















