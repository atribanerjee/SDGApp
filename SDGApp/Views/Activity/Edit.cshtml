@model SDGApp.ViewModel.PlannedActivities
@{
    ViewBag.Title = "Edit Activity";
}

@{Html.RenderPartial("_Breadcrumbs"); }

<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading">
                Edit Activity
            </header>
            <div class="success-message">
                @if (!String.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    @ViewBag.SuccessMessage
                }
            </div>
            <div class="panel-body">
                <div class="tab-content tasi-tab">
                    <div id="overview" class="tab-pane active">
                        <div class="panel">
                            @using (Html.BeginForm("Edit", "Activity", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.HiddenFor(m => m.PlannedActivitiesID)
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Planned Activities Name<span class="" style="color:red"> *</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.PlannedActivitiesName, new { @placeholder = "Planned Activities Name", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.PlannedActivitiesName, "", new { @style = "color: red" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Planned Activities Time<span class="" style="color:red"> *</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.DefaultDateTime, new { @placeholder = "Planned Activities Time", @class = "form-control timePicker" })
                                        @Html.ValidationMessageFor(m => m.DefaultDateTime, "", new { @style = "color: red" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-3 col-lg-9">
                                        <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i>&nbsp;Save</button>
                                        @Html.ActionLink("Cancel", "Index", "Activity", new { }, new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts
{
    <script>
        // select menu
       fnSelectMenuActive('setup', 'manageactivity');
        $(function () {

            $('#DefaultDateTime').timepicker({
                hourGrid: 4,
                minuteGrid: 10,
                timeFormat: 'hh:mm tt'
            });
        });
    </script>
}