@model SDGApp.ViewModel.TagsCategoryViewModel
@{
    ViewBag.Title = "Add";    
}

<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading">
                Add Tag Categories
            </header>
            <div class="success-message">
                @if (!String.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    @ViewBag.SuccessMessage
                }
            </div>
            <div class="panel-body">
                <div class="tab-content tasi-tab">
                    <div id="overview" class="tab-pane active">
                        <div class="panel">
                            @using (Html.BeginForm("Add", "TagCategory", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Tag Category Name<span class="" style="color:red"> *</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.TagCategoryName, new { @placeholder = "Tag Category Name",  @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.TagCategoryName)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;Save</button>
                                        @Html.ActionLink("Cancel", "Index", "Dashboard", new { }, new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
