@model SDGApp.ViewModel.HelpViewModel
@{
    ViewBag.Title = "Edit Help";
    SDGApp.Models.BaseModel BM = new SDGApp.Models.BaseModel();

}

<input id="hdnPageName" type="hidden" value="SaveHelpPage" />

<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
<script src="@Url.Content("~/Scripts/ckeditor/adapters/jquery.js")"></script>



@{Html.RenderPartial("_Breadcrumbs"); }


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <section class="panel ">
            <header class="panel-heading">
                <h2> Edit / Modify help </h2>
                <span class="tools pull-right none">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-cog"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>
            <div class="panel-body form-generalIn">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 no-pad">
                        @using (Html.BeginForm("Edit", "Help", FormMethod.Post, new { @class = "form-horizontal form-hlp" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.AntiForgeryToken()
                            <div class="position-center generalIn-formz generalIn-formzTag">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="prf-contacts sttng none">
                                            <h2> Personal Information</h2>
                                        </div>
                                        <div>
                                            <div class="form-group hlp">
                                                <label class="col-lg-2 col-md-2 col-sm-12 control-label">@Html.LabelFor(model => model.Topic)</label>
                                                <div class="col-lg-10 col-md-10 col-sm-12 rdonly">
                                                    <h4 class="item-heading">
                                                        @Html.HiddenFor(m => m.HelpID)
                                                        @Html.DisplayFor(m => m.Topic, new { @class = "form-control label" })
                                                    </h4>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-lg-2 col-md-2 col-sm-12 control-label">@Html.LabelFor(model => model.HelpText)</label>
                                                <div class="col-lg-10 col-md-10 col-sm-12">
                                                    @Html.TextAreaFor(m => m.HelpText, new { @placeholder = "Enter Help Content", @rows = "10" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-2 col-lg-10">
                                                    <button id="btnSubmit" class="btn btn-primary" type="submit">Save</button>
                                                    @Html.ActionLink("Cancel", "Index", "Help", new { }, new { @class = "btn btn-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12">

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>





<script>
     @*@if (IsInsert)
     { }<text></text>*@
    var editor = CKEDITOR.replace('HelpText');

    ('#HelpText').CKEDITOR();



</script>

