@model List<SDGApp.ViewModel.UserContactsViewModel>
<div class="panel-body body-kontakts kontakts-invitey ">

    <div class="well well-sm well-grid">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="media" id="dv_@item.FKSenderUserID">
                    <div class="media-body">

                        <a href="#"> <img src="@item.Picture" class="img-responsive" alt=""> </a>

                        <h4 class="media-heading">@item.FirstName @item.LastName</h4>

                        <a href="#" onclick="fnReply('@item.ContactID','a')" type="button" id="btnConnect_@item.ContactID" class="btn btn-danger btnConnect">Accept</a>
                        <a href="#" onclick="fnReply('@item.ContactID','r')" type="button" id="btnConnect_@item.ContactID" class="btn btn-success btnConnect">Reject</a>
                    </div>
                </div>
            }
        }
        else
        {

            <text>
                <div class="media">
                    <h3>
                        No More Contacts
                    </h3>
                </div>
            </text>
        }

    </div>    
</div>

