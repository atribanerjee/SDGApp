@model SDGApp.ViewModel.RoleViewModel
@{
    ViewBag.Title = "Edit Role";
    SDGApp.Models.BaseModel BM = new SDGApp.Models.BaseModel();

}

@{Html.RenderPartial("_Breadcrumbs"); }



<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">

        <section class="panel ">
            <header class="panel-heading">
                <h2> Edit role </h2>
                <span class="tools pull-right none">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-cog"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>

            <div class="panel-body form-generalIn">

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">

                        @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.HiddenFor(model => model.RoleId)


                            <div class="position-center generalIn-formz generalIn-formzTag">


                                <div class="row">

                                    <div class="col-lg-12 col-md-12 col-sm-12 no-pad">


                                        <div class="prf-contacts sttng none">
                                            <h2> Personal Information</h2>
                                        </div>

                                        <div>
                                            <div class="form-group">
                                                <label class="col-lg-1 col-md-1 col-sm-12 control-label">Role </label>
                                                <div class="col-lg-11 col-md-11 col-sm-12">
                                                    @Html.TextBoxFor(m => m.RoleName, new { @placeholder = "Role", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.RoleName)
                                                </div>
                                            </div>

                                            <div class="form-group" style="display:none">
                                                <label class="col-lg-1 col-md-1 col-sm-12 control-label">@Html.LabelFor(model => model.IsActive)</label>
                                                <div class="col-lg-11 col-md-11 col-sm-12">
                                                    @Html.CheckBoxFor(model => model.IsActive, new { })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-lg-11">
                                                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i>&nbsp;Save</button>
                                                    @Html.ActionLink("Cancel", "Index", "Role", new { }, new { @class = "btn btn-danger" })
                                                </div>
                                            </div>
                                        </div>



                                    </div>

                                </div>


                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12">

                                    </div>
                                </div>

                            </div>
                        }

                    </div>
                </div>

            </div>
        </section>
    </div>
</div>













@section Scripts
{
    <script type="text/javascript">
      fnSelectMenuActive('setup', 'managerolelist');
    </script>

}