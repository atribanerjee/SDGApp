@model SDGApp.ViewModel.TagLabelViewModel
@{
    ViewBag.Title = "Add Tag Item";
    SDGApp.Models.BaseModel BM = new SDGApp.Models.BaseModel();

}

@{Html.RenderPartial("_Breadcrumbs"); }


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">

        <section class="panel ">
            <header class="panel-heading">
                <h2> Add tag label </h2>
                <span class="tools pull-right none">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-cog"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>

            <div class="panel-body form-generalIn">

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 no-pad">

                        @using (Html.BeginForm("Add", "TagLabels", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                        <div class="position-center generalIn-formz generalIn-formzTag">

                            <div class="form-group">
                                <label class="col-lg-2 col-md-2 col-sm-12 control-label">Tag Label</label>
                                <div class="col-lg-10 col-md-10 col-sm-12">
                                    @Html.TextBoxFor(m => m.LabelName, new { @placeholder = "Enter Tage Label", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.LabelName)
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="col-lg-2 col-md-2 col-sm-12 control-label">Range</label>
                                <div class="col-lg-4 col-md-4 col-sm-12">
                                    @Html.TextBoxFor(m => m.MaxRange, new { @placeholder = "min", @class = "form-control", @type = "number" })
                                    @Html.ValidationMessageFor(m => m.MaxRange)
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12">
                                    @Html.TextBoxFor(m => m.MinRange, new { @placeholder = "max", @class = "form-control", @type = "number" })
                                    @Html.ValidationMessageFor(m => m.MinRange)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-2 col-md-2 col-sm-12 control-label">Default Value</label>
                                <div class="col-lg-4 col-md-4 col-sm-12">
                                    @Html.TextBoxFor(m => m.DefaultValue, new { @placeholder = "value", @class = "form-control", @type = "number" })
                                    @Html.ValidationMessageFor(m => m.DefaultValue)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 col-md-2 col-sm-12 control-label">Precision Digit</label>
                                <div class="col-lg-10 col-md-10 col-sm-12">
                                    @Html.TextBoxFor(m => m.PrecisionDigit, new { @placeholder = "digit", @class = "form-control", @type = "number" })
                                    @Html.ValidationMessageFor(m => m.PrecisionDigit)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i>&nbsp;Save</button>
                                    @Html.ActionLink("Cancel", "Index", "TagLabels", new { }, new { @class = "btn btn-danger" })
                                </div>
                            </div>

                        </div>
                        }



                    </div>
                </div>

            </div>
        </section>
    </div>
</div>






@section Scripts
{
    <script>

        fnSelectMenuActive('tags', 'taglabels');

    </script>

}



